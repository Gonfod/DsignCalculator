  <Target Name="CopySFMLDlls" AfterTargets="Build">
    <!-- Set SFML lib folder based on Platform; common folders: lib\x64 or lib\Win32 -->
    <PropertyGroup>
      <SfmlLibDir>$(ProjectDir)lib\$(Platform)</SfmlLibDir>
    </PropertyGroup>
    <!-- If the folder doesn't exist, try plain lib\x64 as a fallback for x64 builds -->
    <PropertyGroup Condition="!Exists('$(SfmlLibDir)') and '$(Platform)'=='x64'">
      <SfmlLibDir>$(ProjectDir)lib\x64</SfmlLibDir>
    </PropertyGroup>
    <!-- Collect DLLs -->
    <ItemGroup>
      <_SfmlDlls Include="$(SfmlLibDir)\sfml-*.dll" Condition="Exists('$(SfmlLibDir)')" />
    </ItemGroup>
    <!-- Copy to output directory -->
    <Copy SourceFiles="@(_SfmlDlls)" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true" Condition="'@(_SfmlDlls)' != ''" />
  </Target>
